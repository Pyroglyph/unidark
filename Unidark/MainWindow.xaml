<Window x:Class="Unidark.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unidark"
        mc:Ignorable="d"
        Topmost="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Unidark"
        Height="100" Width="400"
        FontSize="14"
        Loaded="MainWindow_OnLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="{Binding Status}" VerticalContentAlignment="Center" />
        <ProgressBar Grid.Row="1" Value="{Binding MainStageProgress}" Margin="6 3" />
        <ProgressBar Grid.Row="2" Value="{Binding CurrentStageProgress}" Margin="6 3" />
        <Label Grid.Row="0" Grid.RowSpan="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Visibility="{Binding SuccessMessageVisibility}" Background="LightGreen">
            Success!
        </Label>
    </Grid>
</Window>
